<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name%>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <%= link_to "チャットを終了する", root_path, method: :delete %>
    </div>
  </div>
</div>


<div class="messages">
  <% if @messages.present? %>
    <% @messages.each do |message| %>
      <div class="content"> 
        <%= message.content %>
      </div>
      <div class="voice">
        <%= audio_tag message.voice.to_s %>
      </div>
    <% end %>
  <% end %>
</div>

<%= form_with model: [@room, @message], html: {class: "form"}, local: true do |f|%>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-voice">
      <span class="voice-file">音声</span>
      <%= f.file_field :voice, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>

